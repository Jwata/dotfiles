{
  "title": "Iterm",
  "rules": [
    {
      "description": "Map left command + left shift to left alt and left shift on Vim",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_alt",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_gui"
            },
            {
              "key_code": "left_shift"
            }
          ]
        }
      ]
    }
  ]
}

